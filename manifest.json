{
  "manifest_version": 3,
  "name": "YouTube Downloader",
  "version": "1.0.0",
  "description": "Premium YouTube video downloader using yt-dlp with native messaging",
  "author": "Personal Use",
  
  "permissions": [
    "activeTab",
    "storage",
    "nativeMessaging",
    "notifications",
    "downloads"
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://i.ytimg.com/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "YouTube Downloader"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
